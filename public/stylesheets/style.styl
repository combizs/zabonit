body
  margin: 0px
  padding: 0px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

a
  color: #03899c
  text-decoration: none

header
  float: left
  width: 75%
  padding: 1%
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

aside
  float:right
  width: 25%
  padding: 1% 1% 1% 0
  text-align: center
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

#targetdiv
  min-height: 300px
  // max-height: 300px
  border: 1px solid gray
  overflow-y: auto
  line-height: 25px
  font-size: 12px

::selection
  background: #FFB673
::-moz-selection
  background: #FFB673

.error
  border-color: red

input, button
  margin: 0
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box
  color: white

input
  width: 100%
  height: 50px;
  padding: 2% 20px;
  border: 0

button
  display: inline-block
  height: 50px
  width: 100%
  padding: 2%
  float: right

::-webkit-input-placeholder
  color: #ccc

:-moz-placeholder
  color: #ccc

::-moz-placeholder
  color: #ccc

:-ms-input-placeholder
  color: #ccc

.commentary
  padding: 5px 0

#side
  position: relative;

.fixed
  width: 24%
  position: fixed

.url
  background: #FE7A00

#comment
  width: 100%
  background: #03899C

#addComment
  position:absolute
  width: 48px
  height: 48px
  background:url('../images/create.png') 0 0

#addComment:hover
  background:url('../images/create.png') -48px 0

#addComment:active
  background:url('../images/create.png') -96px 0

#writeComment
  background: #03899C

#listComments
  clear: both
  background: #015965
  margin: 5% 0 0 0
  float: left
  width: 100%
  color: white
  padding: 4% 0 0 0
  box-sizing: border-box

#showComments
  clear: both
  margin: 5% 0 0 0
  float: left
  width: 100%
  font-size: 10px
  background: white
  color: black

#hold
  float: left
  height: 50px
  width: 100%

.comm
  height: 50px
  overflow: hidden

.comment
  width: 50%
  float: right

a.remove
  height: 50px
  overflow-y: hidden

span.remove
  color: red
  float: right
  font-weight: bold
  padding: 0 0 10px 10px